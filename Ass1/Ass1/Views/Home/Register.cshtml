@model Ass1.Models.User
@using Microsoft.AspNetCore.Http

@{
    Layout = "_Layout";
    ViewData["Title"] = "Registration";
}
<div class="container">
    <h1>Registration</h1>

    <form asp-controller="Home" asp-action="Register" method="post">
        <hr />
        <br />
        <div class="form-group">

            <input type="hidden" id="UserId" name="User.UserId" asp-for="UserId" class="form-control" />

            <label>First Name</label>
            <input type="text" id="User.FirstName" name="User.FirstName" asp-for="FirstName" class="form-control" />

            <label>LastName</label>
            <input type="text" id="User.LastName" name="User.LastName" asp-for="LastName" class="form-control" />

            <label>Email</label>
            <input type="email" id="User.EmailAddress" name="User.EmailAddress" asp-for="EmailAddress" class="form-control" />

            <label>Password</label>
            <input type="password" id="User.Password" name="User.Password" asp-for="Password" class="form-control" />

            <label>Role</label>
            <select name="User.RoleId" id="User.RoleId" asp-for="RoleId " class="form-control">
                <option value="2">Administrator</option>
                <option value="1" selected="selected">General User</option>
            </select>
        </div>
        <label>
        <button type="submit" class="btn btn-primary">Register</button>
        </label>
    </form>
</div>
