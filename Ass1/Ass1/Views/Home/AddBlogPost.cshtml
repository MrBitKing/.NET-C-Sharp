@using Microsoft.AspNetCore.Http
@model Ass1.Models.BlogPost
@{
    Layout = "_Layout";
}

<div class="container">
    <h1>Add BlogPost</h1>
    <hr />
    <form asp-controller="Home" asp-action="AddBlogPost" method="post">
        <div class="form-group">
            <input type="hidden" name="BlogPostId" asp-for="BlogPostId" class="form-control" />

            <fieldset>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="Title" asp-for="Title" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Content</label>
                    <textarea name="Content" asp-for="Content" class="form-control" data-length="5000"> </textarea>
                </div>

            </fieldset>
        </div>
        <button type="submit" class="btn btn-primary">Add Post</button>
    </form>

</div>
