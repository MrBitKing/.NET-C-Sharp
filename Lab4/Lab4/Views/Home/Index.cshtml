@model IEnumerable<Lab4.Models.Movie>
@{
    Layout = "_Layout";
}

<hr />
<h1>Movies Database</h1>

<div class="container">
    <div class="well well-sm">
        <table class="table table-striped table-hover table-responsive">

            <tbody>
                @if (Model == null || Model.Count() == 0)
                {
                    <tr colspan="6">Currently, there are no movies in the database. </tr>

                }
                else
                {
                    <tr>
                        <th>Options</th>
                        @*<th>ID</th>*@
                        <th>Movie Title</th>
                        <th>Movie SubTitle</th>
                        <th>Description</th>
                        <th>Year</th>
                        <th>Rating</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                <a class="btn btn-xs btn-primary" asp-controller="Home" asp-action="EditMovie" asp-route-id="@item.ID">Edit</a>
                                <a class="btn btn-xs btn-danger" asp-controller="Home" asp-action="DeleteMovie" asp-route-id="@item.ID" onclick="return confirm('Are you sure?');">Delete</a>
                            </th>
                            <th> @item.Title </th>
                            <th> @item.SubTitle </th>
                            <th> @item.Description </th>
                            <th> @item.Year </th>
                            <th> @item.Rating / 5 </th>

                        </tr>
                    }

                }
            </tbody>
        </table>

    </div>
</div>

